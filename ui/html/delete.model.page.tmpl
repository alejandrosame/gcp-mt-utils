{{template "base" .}}

{{define "title"}}Delete model{{end}}

{{define "body"}}
<div>
    <div class="row mt-3 justify-content-center">
        <h2>Are you sure that you want to delete the model {{.Form.Get "name"}}?</h2>
    </div>

    <form class="row mt-3 justify-content-center" action='/model/delete/{{.Form.Get "name" | last}}' method='POST'>
        <input type='hidden' name='csrf_token' value='{{.CSRFToken}}'>
        <div class="col mt-1">
            <input class="btn btn-success btn btn-block" type='submit' name="no" value='No'>
        </div>
        <div class="col mt-1">
            <input class="btn btn-danger btn btn-block" type='submit' name="yes" value='Yes'>
        </div>
    </form>
</div>
{{end}}