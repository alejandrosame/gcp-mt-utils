{{template "base" .}}

{{define "title"}}Datasets{{end}}

{{define "body"}}
    <h2>Datasets created</h2>
    {{if .Datasets}}
     <table>
        <tr>
            <th>Display Name</th>
            <th>Pairs count</th>
            <th>Source Language</th>
            <th>Target Language</th>
            <th>Create Time</th>
            <th>Operations</th>
        </tr>
        {{range .Datasets}}
        <tr>
            <td>{{.DisplayName}}</td>
            <td>{{.ExampleCount}}</td>
            <td>{{.TranslationDatasetMetadata.SourceLanguageCode}}</td>
            <td>{{.TranslationDatasetMetadata.TargetLanguageCode}}</td>
            <td>{{humanDate .CreateTime}}</td>
            <td>
                <form action='/dataset/delete/{{.Name | last}}' method='GET'>
                    <input type='hidden' name='csrf_token' value='{{$.CSRFToken}}'>
                    <input type='submit' value='Delete'>
                </form>
                <form action='/dataset/train/{{.Name | last}}' method='GET'>
                    <input type='hidden' name='csrf_token' value='{{$.CSRFToken}}'>
                    <input type='submit' value='Use for training'>
                </form>
        </tr>
        {{end}}
    </table>
    {{else}}
        <p>No datasets created yet!</p>
    {{end}}
    <a href='https://cloud.google.com/automl/ui/translation/datasets/create?project={{getProject}}'>Create a new dataset</a>
{{end}}