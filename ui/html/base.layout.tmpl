{{define "base"}}
<!doctype html>
<html lang='en'>
    <head>
        <meta charset='utf-8'>
        <title>{{template "title" .}} - GCP MT utils</title>
        <!-- Link to the CSS stylesheet and favicon -->
        <link rel='stylesheet' href='/static/css/main.css'>
        <link rel='shortcut icon' href='/static/img/favicon.ico' type='image/x-icon'>
        <!-- Also link to some fonts hosted by Google -->
        <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Ubuntu+Mono:400,700'>
    </head>
    <body>
        <header>
            <h1><a href='/'>GCP MT utils</a></h1>
        </header>
        <nav class="primary">
            <div>
                <a href='/'>Home</a>
            </div>
            <div>
                {{if .AuthenticatedUser}}
                    <form action='/user/logout' method='POST'>
                        <input type='hidden' name='csrf_token' value='{{.CSRFToken}}'>
                        <button>Logout ({{.AuthenticatedUser.Name}})</button>
                    </form>
                {{else}}
                    <a href='/user/login'>Login</a>
                {{end}}
            </div>
        </nav>
        {{if .AuthenticatedUser}}
            {{if or .AuthenticatedUser.Validator .AuthenticatedUser.Admin}}
            <nav>
                <div>
                    <a href='/pair'>Manage pairs</a>
                </div>
                <div></div>
            </nav>
            {{end}}
            {{if or .AuthenticatedUser.Translator .AuthenticatedUser.Admin}}
            <nav>
                <div>
                    <a href='/translate'>Translate text</a>
                </div>
                <div></div>
            </nav>
            {{end}}
            {{if .AuthenticatedUser.Admin}}
            <nav>
                <div>
                    <a href='/model'>Manage models</a>
                </div>
                <div>
                    <a href='/dataset'>Manage datasets</a>
                </div>
                <div>
                    <a href='/train/status'>Training status</a>
                </div>
                <div>
                    <a href='/user/signup/invitation/generate'>Create invitation link</a>
                </div>
                <div></div>
            </nav>
            {{end}}
        {{end}}
        <section>
            {{with .Flash}}
            <div class='flash '>{{.}}</div>
            {{end}}
            {{template "body" .}}
        </section>
        {{template "footer" .}}
        <!-- And include the JavaScript file -->
        <script src="/static/js/main.js" type="text/javascript"></script>
    </body>
</html>
{{end}}