{{template "base" .}}

{{define "title"}}User translation character limits{{end}}

{{define "body"}}
<div>
    <div class="row mt-3 justify-content-center w-100">
        <div class="col">
            <h2>Default limit</h2>
        </div>
        <div class="w-100">
        <div class="col">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th>User role</th>
                        <th>Default character limit (per month)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{with .RoleLimit}}
                    <tr>
                        <td>{{.UserRole}}</td>
                        <td>{{.CharacterLimit}}</td>
                        <td>Update</td>
                    </tr>
                    {{end}}
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mt-3 justify-content-center w-100">
        <div class="col">
            <h2>User defined limits</h2>
        </div>
        <div class="w-100">
        <div class="col">
            <h3>Admins</h3>
        </div>
        <div class="w-100">
        <div class="col">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Characters translated (month)</th>
                        <th>User character limit</th>
                        <th>Total character limit</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{range .AllUserLimits}}
                        {{if or .Super .Admin }}
                        <tr>
                            <td>{{.Name}}</td>
                            <td>{{.Email}}</td>
                            <td>{{.TotalTranslated}}</td>
                            <td>{{.CharacterLimit}}</td>
                            <td>{{.TotalLimit}}</td>
                            <td>Update</td>
                        </tr>
                        {{end}}
                    {{end}}
                </tbody>
            </table>
        </div>
        <div class="w-100">
        <div class="col">
            <h3>Translators</h3>
        </div>
        <div class="w-100">
        <div class="col">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Characters translated (month)</th>
                        <th>User character limit</th>
                        <th>Total character limit</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{range .AllUserLimits}}
                        {{if .Translator }}
                        <tr>
                            <td>{{.Name}}</td>
                            <td>{{.Email}}</td>
                            <td>{{.TotalTranslated}}</td>
                            <td>{{.CharacterLimit}}</td>
                            <td>{{.TotalLimit}}</td>
                            <td>Update</td>
                        </tr>
                        {{end}}
                    {{end}}
                </tbody>
            </table>
        </div>
    </div>
{{end}}